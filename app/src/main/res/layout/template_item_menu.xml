<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_item_menu"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/txt_name_item_menu"
        android:textSize="22sp"
        android:textColor="@color/coloAzul"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_item_menu"
        android:text="Hamburguesa BicMac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_precio_item_menu"
        android:textSize="20sp"
        android:layout_below="@id/txt_name_item_menu"
        android:layout_toRightOf="@id/image_item_menu"
        android:text="$10.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>